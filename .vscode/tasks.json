{
    "version": "2.0.0",
    "tasks": [
		{
			"type": "shell",
			"label": "C/C++: use this compile option with g++",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lGL",
				"-lGLU",
				"-lglfw3",
				"-lX11",
				"-lXxf86vm",
				"-lXrandr",
				"-lpthread",
				"-lXi",
				"-ldl",
				"-lXinerama",
				"-lXcursor",
				"-L${fileDirname}/libs",
				"-lbox2d"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			}
		}
	]
}